<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutLoginRecoverAcount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_color_2"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context=".Layouts.MenuMain.Login.LoginRecoverAcountFragment">

    <!--<Button
        android:id="@+id/buttonClosedLoginRecoverAcount"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="@string/text_variable_11"
        android:textColor="@color/Grey100"
        android:textSize="20sp" />-->

    <ScrollView
        android:id="@+id/scrollLoginRecoverAcount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutScrollLoginRecoverAcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewLogoLoginRecoverAcount"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_logo_icon_artmix" />

            <TextView
                android:id="@+id/textViewLoginTextRecoverAcount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="@string/text_string_51"
                android:textColor="@color/Grey100"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewLoginTextRecoverAcount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="@string/text_string_62"
                android:textColor="@color/Grey100"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEmailLoginRecoverAcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextEmailLoginRecoverAcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_63"
                    android:inputType="text|textEmailAddress"
                    android:textColor="@color/Grey100"
                    android:textColorHint="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonRecoverPasswordLoginRecoverAcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/green_500_background_with_round_borders"
                android:padding="10dp"
                android:text="@string/text_string_64"
                android:textColor="@color/Grey100" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>