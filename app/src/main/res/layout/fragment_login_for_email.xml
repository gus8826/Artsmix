<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutLoginForEmail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_color_2"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context=".Layouts.MenuMain.Login.LoginForEmailFragment">

    <Button
        android:id="@+id/buttonClosedLoginForEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="@string/text_variable_11"
        android:textColor="@color/Grey100"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollViewLoginForEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutScrollLoginForEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLogoLoginForEmail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_logo_icon_artmix" />

            <TextView
                android:id="@+id/textViewTextLoginForEmail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/text_string_47"
                android:textColor="@color/Grey100"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewTextLoginForEmail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/text_string_48"
                android:textColor="@color/Grey100"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEmailLoginForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextEmailLoginForEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_49"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/Grey100"
                    android:textColorHighlight="@color/Grey100"
                    android:textColorHint="@color/Grey100"
                    android:textColorLink="@color/Grey100"
                    android:textCursorDrawable="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPasswordLoginForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100"
                app:passwordToggleContentDescription="passowrd"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/Grey100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPasswordLoginForEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_50"
                    android:inputType="textPassword"
                    android:textColor="@color/Grey100"
                    android:textColorHighlight="@color/Grey100"
                    android:textColorHint="@color/Grey100"
                    android:textColorLink="@color/Grey100"
                    android:textCursorDrawable="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainLayoutOptionsLoginForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonRecoverPasswordLoginForEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@android:color/transparent"
                    android:text="@string/text_string_51"
                    android:textAllCaps="false"
                    android:textColor="@color/Grey100"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonLoginForEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/green_500_background_with_round_borders"
                    android:padding="10dp"
                    android:text="@string/text_string_52"
                    android:textAllCaps="false"
                    android:textColor="@color/Grey100"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayoutOptionsLoginForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonRecoverPasswordLoginForEmail">

                <LinearLayout
                    android:id="@+id/linearLayoutSpaceLoginForEmail_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/Grey100"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/textViewTextLoginForEmail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="@string/text_string_53"
                    android:textColor="@color/Grey100" />

                <LinearLayout
                    android:id="@+id/linearLayoutSpaceLoginForEmail_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/Grey100"
                    android:orientation="vertical" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonCreateNewAccountLoginForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/grey_100_backfround_with_round_borders"
                android:text="@string/text_variable_19"
                android:textAllCaps="false"
                android:textColor="@color/Black" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>