<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutLoginCreateNewAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_color_2"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context=".Layouts.MenuMain.Login.LoginCreateNewAccountFragment">

    <!--<Button
        android:id="@+id/buttonClosedLoginCreateNewAccount"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="@string/text_variable_11"
        android:textColor="@color/Grey100"
        android:textSize="20sp" />-->

    <ScrollView
        android:id="@+id/scrollViewLoginCreateNewAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutLoginCreateNewAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLogoLoginCreateNewAccount"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_logo_icon_artmix" />

            <TextView
                android:id="@+id/textViewTextLoginCreateNewAccount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="@string/text_string_56"
                android:textColor="@color/Grey100"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewTextLoginCreateNewAccount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/text_string_57"
                android:textColor="@color/Grey100" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutNickNameLoginCreateNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextNickNameLoginCreateNewAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_58"
                    android:inputType="textPersonName"
                    android:textColor="@color/Grey100"
                    android:textColorHint="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPhoneNumberLoginCreateNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPhoneNumberLoginCreateNewAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_60"
                    android:inputType="number"
                    android:textColor="@color/Grey100"
                    android:textColorHint="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEmailLoginCreateNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextEmailLoginCreateNewAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_58"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/Grey100"
                    android:textColorHint="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPasswordLoginCreateNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100"
                app:passwordToggleContentDescription="passowrd"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPasswordLoginCreateNewAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_50"
                    android:inputType="textPassword"
                    android:textColor="@color/BlueGrey100"
                    android:textColorHint="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutConfirmPasswordLoginCreateNewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:textColorHint="@color/Grey100"
                app:passwordToggleContentDescription="passowrd"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextConfirmPasswordLoginCreateNewAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Grey100"
                    android:hint="@string/text_string_61"
                    android:inputType="textPassword"
                    android:textColor="@color/Grey100"
                    android:textColorHint="@color/Grey100" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonLoginCreateNewAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/green_500_background_with_round_borders"
                android:padding="10dp"
                android:text="@string/text_string_56"
                android:textColor="@color/Grey100" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>